<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColor">#424658</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="CustomBtnOutline" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">@color/white_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="materialThemeOverlay">@style/CustomBtnOutline.CustomText</item>
        <item name="textInputStyle">@style/SmallText</item>
        <item name="shapeAppearanceOverlay">@style/ShapeFullCornerSize</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/lightBlue</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">56dp</item>
    </style>

    <style name="CustomBtnFilled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="materialThemeOverlay">@style/CustomBtnFilled.CustomText</item>
        <item name="textInputStyle">@style/SmallText</item>
        <item name="shapeAppearanceOverlay">@style/ShapeCornerSize</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">42dp</item>
    </style>

    <style name="CustomBtnOutline.CustomText">
        <item name="colorOnPrimary">@color/darkGray</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomBtnFilled.CustomText">
        <item name="colorOnPrimary">@color/darkGray</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeCornerSize">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeFullCornerSize">
        <item name="cornerSize">28dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="SmallText">
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="MaterialAlertDialog.Rounded" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialAlertDialog.Rounded</item>
    </style>

    <style name="ShapeAppearance.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CustomFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

</resources>